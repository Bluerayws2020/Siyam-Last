<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2CDCD"
    tools:context=".activities.SearchResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <include
            android:id="@+id/include_tab"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/part_number"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#C73535"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_tab"
            android:text="@string/_758758_mercedes_bus_radiators"
            android:paddingTop="30dp"
            android:textColor="@color/white"
            android:paddingStart="40dp"
            />

<androidx.cardview.widget.CardView
    android:id="@+id/cardimg"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/part_number"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:layout_marginTop="40dp"
    app:cardCornerRadius="12dp"


    >
        <ImageView
            android:id="@+id/img33"

            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/photo3"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text12"
     android:layout_margin="10dp"
            />



</androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/detailsBox"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/custom_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cardimg"
            android:layout_marginTop="50dp"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/coreDimensions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/core_dimensions"
                android:textColor="#B23939"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:textSize="16sp"

                />


            <LinearLayout
                android:id="@+id/linear78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >




                <TextView
                    android:id="@+id/txt2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Height: "
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/hight"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="45"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >

                <TextView
                    android:id="@+id/txt4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Width: "
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/width"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="90.54"
                    android:layout_gravity="start"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1">


                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:text="@string/depth"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/depth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:gravity="end"
                    android:text="16.30"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >






                <TextView
                    android:id="@+id/txt8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Overall Height: "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/overallhight"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/_7_234"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/descrpitionBox"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/custom_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/detailsBox"
            android:layout_marginTop="50dp"
            android:orientation="vertical"

            >


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#B23939"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:textSize="16sp"

                />


            <LinearLayout
                android:id="@+id/linear780"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >




                <TextView
                    android:id="@+id/txt20"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Product Type : "
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/ptype"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Radiator"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear790"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >

                <TextView
                    android:id="@+id/txt40"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Orientation : "
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/orintation"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Downflow"
                    android:layout_gravity="start"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />



            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >


                <TextView
                    android:id="@+id/txt06"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Filterneck : "
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/filter"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="None"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear810"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >






                <TextView
                    android:id="@+id/txt80"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Inlet : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/nilkt"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="7.256 Left"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear878"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/linear810"
                >






                <TextView
                    android:id="@+id/txt87"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Outlet : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/outlet"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="7.256 Right"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear898"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/linear878"
                >






                <TextView
                    android:id="@+id/txt77"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Oil Cooler : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/oil"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="N/A"
                    android:gravity="end"
                    android:layout_marginEnd="50dp"
                    android:textSize="12sp"
                    />




            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
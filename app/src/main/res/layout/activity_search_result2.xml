<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2CDCD"
    tools:context=".activities.SearchResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <include
            android:id="@+id/include_tab"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/part_number"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#C73535"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_tab"
            android:text="@string/_758758_mercedes_bus_radiators"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/white"
                    />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardimg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/part_number"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16sp"
            >

        <ImageView
            android:id="@+id/img33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_cornrer"
            android:scaleType="centerInside"
            android:src="@drawable/photo3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/part_number" />





        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/detailsBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="40dp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cardimg"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            >



            <TextView
                android:id="@+id/coreDimensions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_details"
                android:textColor="#B23939"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:textSize="16sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/table"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >


            <LinearLayout
                android:id="@+id/linear78"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                >




                <TextView
                    android:id="@+id/txt2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="type: "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/type"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="45"
                    android:textSize="12sp"
                    android:textAlignment="viewEnd"

                    />



            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />

            <LinearLayout
                android:id="@+id/linear79"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >

                <TextView
                    android:id="@+id/txt4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Fitment/ Model: "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/fitment_model"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="90.54"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />



            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />
            <LinearLayout
                android:id="@+id/linear80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1">


                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:text="Core Size"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/core_Size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textAlignment="viewEnd"
                    android:text="16.30"
                    android:textSize="12sp" />


            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />

            <LinearLayout
                android:id="@+id/linear81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >






                <TextView
                    android:id="@+id/txt8"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="No. of Rows"
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/no_of_rows"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/_7_234"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />




            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />
            <LinearLayout
                android:id="@+id/linear790"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >

                <TextView
                    android:id="@+id/txt40"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Inlet Pipe : "
                    android:layout_gravity="start"

                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/inlet_Pipe"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Downflow"

                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />



            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />
            <LinearLayout
                android:id="@+id/linear800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >


                <TextView
                    android:id="@+id/txt06"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Outlet Pipe : "
                    android:layout_gravity="start"

                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/outlet_Pipe"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="None"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />



            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />

            <LinearLayout
                android:id="@+id/linear810"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/txt1"
                >






                <TextView
                    android:id="@+id/txt80"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Transmission : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/transmission"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="7.256 Left"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />




            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/nav_gray"
                    />
            <LinearLayout
                android:id="@+id/linear878"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linear810"
                >






                <TextView
                    android:id="@+id/txt87"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="OME : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/OME"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="7.256 Right"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/nav_gray"
                />
            <LinearLayout
                android:id="@+id/linear898"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linear878"
                >






                <TextView
                    android:id="@+id/txt77"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Year : "
                    android:layout_gravity="start"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/year"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="N/A"
                    android:textAlignment="viewEnd"

                    android:textSize="12sp"
                    />



            </LinearLayout>
            </LinearLayout>

        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>